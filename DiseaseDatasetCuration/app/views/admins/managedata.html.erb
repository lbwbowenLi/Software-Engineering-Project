<h1> Manage Dataset </h1>
<h4> Click link below for more information </h4>
<div class="row">
<div class = "col-sm-10">
    <% if (@all_data!=nil)&&!@all_data.empty? %>
      <table class='table'>
        <thead>
          <tr>
            <th class = "col-md-3">Name</th>
            <th class = "col-md-3">Submission Detail</th>
            <th class = "col-md-3">Questions Detail</th>
            <th class = "col-md-3">Add Questions</th>
            <th class = "col-md-3">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @all_data.each do |k,v| %>  <!-- for every diseases(we have sorted the diseases by accession) -->
              <tr>         <!-- and start a new row -->
                <td><%= link_to v[0], "http://www.ebi.ac.uk/arrayexpress/experiments/#{k}", :target => '_blank' %></td>
                <td><%= link_to v[1], {:controller => 'fullsubmissions', :action => 'index', :accession => k}%></td>
                <td><%= link_to v[2], {:controller => 'fullquestions', :action => 'index', :accession => k}%></td>
                <td><%= link_to 'Add', {:controller => 'fullquestions', :action => 'groupselect', :accession => k, :selected_keys => 'from_managedata'}%></td>
              <td><%= link_to 'Delete', {:controller => "admins", :action => "delete_in_managedata", :key => k} ,:onclick => "return confirm('Are you sure you want to delete this dataset?')" %></td>
            </tr>  <!-- end the row-->
          <% end %>
        </tbody>
      </table>
    <% else %>
             <tr>
               <td> <%= "No dataset for this group" %></td>
             </tr>
    <% end %>
    </div>
</div>

<hr>
<p><br><br><br></p>           
<div class = "row">
  <div class = "col-sm-2">

    <%= link_to admins_show_path,
    :class => "btn btn-warning btn-block" do %>
    <i class="glyphicon glyphicon-chevron-left"></i> Back to Admin
    <% end %>     
  </div>  
  <div class = "col-sm-10">
  </div> 
</div>  
