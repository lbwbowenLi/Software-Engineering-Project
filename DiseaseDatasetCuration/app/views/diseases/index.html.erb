<% provide(:title, 'Main Page') %>

<h1> Questions </h1>
<div class="row">
  <%= form_tag diseases_import_path(), :method => :post, :id => "questions" do%>
      <table class='table'>
        <thead>
          <tr>
            <th class = "col-md-3">DataSet</th>
            <th class = "col-md-9">Question</th>
          </tr>
        </thead>
        <tbody>
          
        <% @questions.each do |ds,question| %>
              <tr >        
                <td><%= link_to ds[1], "http://www.ebi.ac.uk/arrayexpress/experiments/#{ds[1]}/?query=#{ds[0]}", :target => '_blank' %></td>
                <td>
                  <div style="overflow-y:scroll;height:200px;">
                    <table class='table'>
                    <tbody>
                      
                    <% question.each do |q| %> 
                      
                    <tr>
                      <td width="150px"><%= q[1] %></td>
                      <% if q[2]=="1"%>
                      <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "1", true ,class: 'radio_input') %>Yes</label>
                      </td>
                      <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "2", false ,class: 'radio_input') %>No</label>
                      </td>
                      <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "nil", false ,class: 'radio_input') %>No Choice</label>
                      </td>
                        <td width="200px">Reason<%= text_field_tag "reason[#{[q[0]]}]", q[3] %></td>
                      <% elsif q[2]=="2"%>
                        <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "1", false ,class: 'radio_input') %>Yes</label>
                      </td>
                      <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "2", true ,class: 'radio_input') %>No</label>
                      </td>
                      <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "nil", false ,class: 'radio_input') %>No Choice</label>
                      </td>
                        <td width="200px">Reason<%= text_field_tag "reason[#{[q[0]]}]", q[3] %></td>
                      <% else %>
                      <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "1", false ,class: 'radio_input') %>Yes</label>
                      </td>
                      <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "2", false ,class: 'radio_input') %>No</label>
                      </td>
                      <td width="30px">
                        <label><%= radio_button_tag("choose[#{[q[0]]}]", "nil", false ,class: 'radio_input') %>No Choice</label>
                      </td>
                        <td width="200px">Reason<%= text_field_tag "reason[#{[q[0]]}]" %></td>
                        <% end %>
                    </tr>
                    <% end %>
                  </tbody>
                </table> 
                </div> 
              </td> 
            </tr> 
        <% end %>
        </tbody>
      </table>
    <%= link_to 'Submit', "#", :class => "btn btn-success button_wid", :id => "submit"%>
  <% end %>
</div>
